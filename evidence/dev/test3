from psychopy import visual, core, monitors
import numpy as np

monitor = monitors.Monitor("MyMonitor")
monitor.setSizePix((1920, 1080))
monitor.setWidth(250)
monitor.setDistance(100)
monitor.saveMon()


win = visual.Window(size = (1920,1080), monitor = monitor, units = "deg", color = (0,0,0), fullscr = False, screen = 1)
gabor = visual.GratingStim(win = win, tex = "sin", size = 5, sf = 0.75, ori = -30, pos = (-3.5,0), contrast = 1, mask = "gauss")
mask = visual.GratingStim(win = win, tex = "sin", size = 7.5, sf = 0.75, ori = 30, pos = (-3.5,0), contrast = 1, mask = "gauss")
blur_region = visual.GratingStim(win = win, tex = None, size = 12, sf = 0, pos = (-3.5,0), contrast = 0.2, mask = "gauss", color = (0,0,0))

mask.draw()
blur_region.draw()
gabor.draw()

win.flip()
core.wait(5)
win.close()